<div class="modal fade" id="new_chemical_treatment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
        <h4 class="modal-title" id="myModalLabel">New Chemical</h4>
      </div>
      <div class="modal-body">
        <div id="client_selector">
          <p>Which Customer would you like to use for this Work Order?</p>

          <div class ="search-div row">
            <%= text_field_tag :search, nil, :class=>"form-control search_input",:placeholder=>"Search Clients...",:require=>true,:id=>"search_input_job_client_model",:style=>"width: 48%;",:onkeyup => "searchClientChemicalModel($(this).val())" %>
            <span class="or">or</span>     
            <%= link_to 'Create New Customer', new_client_path,:style=> "float:right" ,:class=>"button_new_create"%> 
          </div>
          <br/>
          <h4>Some Recently Used Customers:</h4>
          <ul class="thicklist client_list_display chemicals_clients" id="client_search_replace"> 
            <%= render "search_client_chemical"%>
          </ul>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>