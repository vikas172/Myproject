<div class="client_index">
  <div class="main_container">
    <%= render "clients/error_message_and_flash" %>

    <h3 class="font1-title">Listing classifieds</h3>
    <div class="row">
      <%= link_to 'New Classified', new_classified_path ,:class=>"button_new_create save-new-btn1",:style=>"float:right;"%>
    </div>
    <br>
    <table class="table-bordered table">
      <thead>
        <tr>
          <th>Status</th>
          <th>Manage</th>
          <th>Posting title</th>
          <th>Area & Category</th>
          <th>Posted Date</th>
          <th>Id</th>
          <th colspan="3" style="text-align: center!important;">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @classifieds.each do |classified| %>
          <tr>
            <td>Draft</td>
            <td><%=link_to "Repost","http://www.craigslist.org",target: "_blank"%></td>
            <td><%= classified.posting_title %></td>
            <td><%= classified.specific_location %></td>
            <td><%= classified.created_at.strftime("%Y-%m-%d %r")%></td>
            <td><%= classified.id %></td>
           
           <td><%= link_to 'Preview', classified %></td>
            <td><%= link_to 'Edit', edit_classified_path(classified) %></td>
            <td><%= link_to 'Delete', classified, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
