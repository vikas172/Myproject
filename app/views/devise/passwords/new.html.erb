<link rel="stylesheet" type="text/css" href="../assets/register/form-style.css" />
<%= javascript_include_tag 'new_application' %>
<%= stylesheet_link_tag   'new_application' %>
<%= render 'layouts/home_header' %>

  <div id="form_wrapper" class="form_wrapper">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,:class=>"forgot_password active"}) do |f| %>  
		  <%= devise_error_messages! %>
      <div>
        <label>Email</label>
        <%= f.email_field :email, autofocus: true %>
        <span class="error">This is an error</span>
      </div>
      <div class="bottom">
        <div class="remember"><%= f.submit "Reset my password" %></div>
        <a href="/users/sign_in" rel="login" class="linkform">Suddenly remebered? Log in here</a>
        
        <div class="clear"></div>
      </div>
    <% end %>
	</div>
<%#= render "devise/shared/links" %>
