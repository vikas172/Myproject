<div class="modal fade" id="service_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header new-modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Service Obtain Info</h4>
			</div>
			<div class="modal-body">
				<div class="number_display"></div>	
				</br>
				<h4 class="title2-font">Buy a Twilio number by area code</h4>
				</br>
				<div id="buy_a_number" style="border: 1px solid #ccc; height: 200px;">
					<br>
					<%if @general_info.blank?%>
						<%=form_tag buy_a_number_path,:remote=>true do %>
							<div class="row">
								<div class="span2">
									Enter a US area code: 
								</div>
								<div class="span3">
									<%= text_field_tag "area_code",nil,:size=>"3"%>
								</div>
							</div>
							<div class="col-md-11 text-right">
							<%= submit_tag "OBTAIN" ,:class=>"button_new_index pull-right"%>
							
								<button type="button" class="model_cancel_button" data-dismiss="modal pull-right">CANCEL</button>
						    </div>
						<%end%>
					<%end%>	

					<%if !@general_info.blank?%>
						<%if !@general_info.area_code.blank?%>	
							<div style="float: left; margin-left: 20px;" class="service_phone_number row" id="service-phone-number">
								Area Code:- &nbsp;&nbsp;&nbsp;<%= @general_info.area_code %><br>
								Service Phone Number:- &nbsp;&nbsp;<%=@general_info.service_number %>
							</div>
							<div class="clear"></div>
							<div id="change-obtain-number" style="display:none;">
								<%=form_tag buy_a_number_path,:remote=>true do %>
									<div class="row">
										<div class="span2">
											Enter a US area code: 
										</div>
										<div class="span3">
											<%= text_field_tag "area_code",nil,:size=>"3"%>
										</div>
									</div>
									<%= submit_tag "OBTAIN" ,:class=>"button_new_index",:style=>"float: none; padding: 6px 25px ! important; margin-left: 325px;"%>
								<%end%>
							</div>	
							</br>
							</br>
							<div class="row">
								<%=link_to "Change","#",:class=>"button",:style=>"margin-left:10px;",:id=>"change-service"%>
								<%= link_to "Delete Service Number",delete_service_number_path,:class=>"cancel_account_button",data: {confirm: "Are You Sure Account Delete Your Service Number?"}%>
							</div>
						<%else%>
							<%=form_tag buy_a_number_path,:remote=>true do %>
								<div class="row">
									<div class="span2">
										Enter a US area code: 
									</div>
									<div class="span3">
										<%= text_field_tag "area_code",nil,:size=>"3"%>
									</div>
								</div>
								<%= submit_tag "OBTAIN" ,:class=>"button_new_index",:style=>"float: none; padding: 6px 25px ! important; margin-left: 325px;"%>
							<%end%>
						<%end%>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>
	
