<div id="detailed_permissions">
  <fieldset style="margin-top: 10%;" class="basick_remin">
    <div class="permission">
      <div class="parent">
        <input type="checkbox" disabled="disabled" checked="checked">
        <label>Tasks</label>
        <div class="description">Applies to basic tasks, reminders,<br>
          events and visits.
        </div>
      </div>
      <div class="detail">
        <ul class="vertical">
          <li>
            <input checked="checked" id="permission_to_dos_" name="permission[to_dos]" type="radio" value="view_complete">
            <label for="user_permissions_to_dos_1">View and Complete Their Tasks</label>
          </li>
          <li>
            <input checked="checked" id="permission_to_dos_" name="permission[to_dos]" type="radio" value="edit"><label for="user_permissions_to_dos_2">Edit Their Tasks</label>
          </li>
          <li>
            <input checked="checked" id="permission_to_dos_" name="permission[to_dos]" type="radio" value="edit_all"><label for="user_permissions_to_dos_6">Edit All Tasks</label>
          </li>
          <li>
            <input checked="checked" id="permission_to_dos_" name="permission[to_dos]" type="radio" value="edit_delete_all"><label for="user_permissions_to_dos_8">Edit &amp; Delete All Tasks</label>
          </li>
        </ul>
      </div>
    </div>
  </fieldset>
  <fieldset style="margin-top: 10%;" class="basick_remin">
    <div class="permission">
      <div class="parent">
        <input type="checkbox" id="user_permissions_pricing" class="has_details" name="permission[permission_show_pricing]"> 
        <label for="user_permissions_pricing">Show Pricing</label>
        <div class="description">Required to edit Estimate, invoices and line items on Work Orders.</div>
      </div>
    </div>
  </fieldset>
  <fieldset class="basick_remin">
    <div class="permission">
      <div class="parent">
        <input type="checkbox" id="user_permissions_clients" class="has_details"> 
        <label for="user_permissions_clients">Customers &amp; Pools</label>
      </div>
      <div class="detail invisible diplay_client_properties_detail">
        <select class="rwd" id="user_permissions_clients_rwd" name="permission[permission_client_properties][]">
          <option value="1">Read</option>
          <option value="2">Read Write</option>
          <option value="3">Read, Write Delete</option>
        </select>
        <p>
          <input type="checkbox" id="user_permissions_clients_index" class="" name="permission[permission_client_properties][]"> <label for="user_permissions_clients_index">List All Customers &amp; Pools</label>
        </p>
      </div>
    </div>
    <div class="permission indent pad-top">
      <div class="parent">
        <input type="checkbox" id="user_permissions_quotes" disabled="disabled" class="has_details require_clients check_box_unselect"> <label for="user_permissions_quotes" class="disabled check_box_unselect">Estimate</label>
      </div>
      <div class="detail invisible diplay_quotes_detail">
        <span style="display:none;" class="has_pricing">
          <select class="rwd" id="user_permissions_quotes_rwd" name="permission[permission_quotes][]">
            <option value="1">Read</option>
            <option value="2">Read Write</option>
            <option value="3">Read, Write Delete</option>
          </select>
        </span>
        <span class="not_has_pricing">
        Read Only
        </span>
        <p>
          <input type="checkbox" id="user_permissions_quotes_index" class="" name="permission[permission_quotes][]"> <label for="user_permissions_quotes_index">List All Quotes</label>
        </p>
      </div>
    </div>
    <div class="permission indent pad-top">
      <div class="parent">
        <input type="checkbox" id="user_permissions_invoices" disabled="disabled" class="require_clients has_details check_box_unselect"> <label for="user_permissions_invoices" class="disabled">Invoices</label>
      </div>
      <div class="detail invisible diplay_invoices_detail">
        <span style="display:none;" class="has_pricing">
          <select class="rwd" id="user_permissions_invoices_rwd" name="permission[permission_invoices][]">
            <option value="1">Read</option>
            <option value="2">Read Write</option>
            <option value="3">Read, Write Delete</option>
          </select>
        </span>
        <span class="not_has_pricing" style="display:none;">
        Read Only
        </span>
        <p>
          <input type="checkbox" name="permission[permission_invoices][]" id="user_permissions_invoices_index" class=""> <label for="user_permissions_invoices_index">List All Invoices</label>
        </p>
      </div>
    </div>
    <div class="permission indent pad-top">
      <div class="parent">
        <input type="checkbox" name="" id="user_permissions_work_orders" disabled="disabled" class="require_clients has_details check_box_unselect">
        <label for="user_permissions_work_orders" class="disabled">Work Orders</label>
      </div>
      <div class="detail invisible display_work_orders_detail">
        <select class="rwd" id="user_permissions_work_orders_rwd" name="permission[permission_jobs][]">
          <option value="1">Read</option>
          <option value="2">Read Write</option>
          <option value="3">Read, Write Delete</option>
        </select>
        <p>
          <input type="checkbox" id="user_permissions_work_orders_index" name="permission[permission_jobs][]" class=""> <label for="user_permissions_work_orders_index">List All Work Orders</label>
        </p>
      </div>
    </div>
    <div class="permission indent pad-top">
      <div class="parent">
        <input type="checkbox" id="user_permissions_notes" disabled="disabled" class="require_clients has_details check_box_unselect">
        <label for="user_permissions_notes" class="disabled">Note &amp; Attachments</label>
        <div class="description">On Customers, Estimate, Invoices &amp; Work Orders.</div>
      </div>
      <div class="detail invisible display_attachment_notes_detail">
        <select class="rwd" id="user_permissions_notes_rwd" name="permission[permission_note_attachment][]">
          <option value="1">Read</option>
          <option value="2">Read Write</option>
          <option value="3">Read, Write Delete</option>
        </select>
        <p>
          <input type="hidden" id="user_permissions_work_orders_index" name="permission[permission_note_attachment][]" class="" value="on">
        </p>
      </div>
    </div>
    <div class="permission indent pad-top">
      <input type="checkbox" disabled="disabled" class="require_clients check_box_unselect" name="permission[permission_reports]" style="float: left; margin-right: 10px;">  <label for="user_permissions_reports" class="disabled" style="width: auto; float: left;">Reports</label>
    </div>
  </fieldset>
</div>
