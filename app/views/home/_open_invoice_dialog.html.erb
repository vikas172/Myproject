<div class="modal-dialog modal-sm">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Invoice</h4>
    </div>
    <div class="modal-body">
      <div class="content balance_adjustment">
        <div class="compressed_form payment_form">
          <p>
            <label>Invoice:</label>
              <b><%= link_to "Invoice ##{@invoice.id}", invoice_path(@invoice) %></b>
          </p>
          <p>
            <label>Amount:</label>
            <b>
              $<%= @total %>
            </b>
          </p>
          <p>
            <label>Entry Date:</label>
            <b><%= @invoice.entry_date.strftime("%m/%d/%Y") rescue "" %></b>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>