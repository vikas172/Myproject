<div id="summary" class="content_align">
  <div data-dynamic="true" class="summary_bars">
    <%= link_to("/reports/contracts", :class=>"subsection_link #{get_selected_default}" ) do %>
      <h3>
        Total
        <span class="count"><%= get_count_recurring_contracts("")%></span>
      </h3>
       <span data-value="<%= get_recurring_contracts_data("")%>" class="total" style="width: 330px;">$<%= get_recurring_contracts_data("")%></span>
    <% end %>
    <div class="short_separator"></div>
    <%= link_to("/reports/contracts/active", :class=>"subsection_link #{get_selected("active")}" ) do %>
      <h3>
        Active
        <span class="count"><%= get_count_recurring_contracts("active")%></span>
      </h3>
       <span data-value="<%= get_recurring_contracts_data("active")%>" class="total" style="width: 330px;">$<%= get_recurring_contracts_data("active")%></span>
    <% end %>
    <%= link_to("/reports/contracts/completed", :class=>"subsection_link #{get_selected("completed")}" ) do %>
      <h3>
        Completed
        <span class="count"><%= get_count_recurring_contracts("completed")%></span>
      </h3>
       <span data-value="<%= get_job_report_data("completed")%>" class="total" style="width: 330px;">$<%= get_recurring_contracts_data("completed")%></span>
    <% end %>
  </div>
</div>