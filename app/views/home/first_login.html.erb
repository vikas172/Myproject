<link rel="stylesheet" type="text/css" href="../assets/register/form-style.css" />
<%= javascript_include_tag 'new_application' %>
<%= stylesheet_link_tag   'new_application' %>
<div class="main_container">
  <div id="form_wrapper" class="form_wrapper">
    <%= form_for @user, :url => url_for(:controller => 'registrations', :action => 'create') do |f| %>
  	 
      <h3>Welcome To Copperservice</h3>
      <div class="column">
    	  <div>
          <label>Full Name</label>
    	    <%= f.text_field :full_name, autofocus: true ,:value=>params[:full_name], :readonly=>true%>
        </div>

        <div>
          <label>User Name</label>
          <%= f.text_field :user_name, autofocus: true,:value=>params[:full_name], :readonly=>true%>
        </div>
          <%= f.hidden_field :company_name, autofocus: true,:value=>params[:company]%>
          <%= f.hidden_field :marker_color, autofocus: true,:value=>params[:marker]%>

        <div>
          <label>Email</label>
          <%= f.email_field :email, autofocus: true,:value=>params[:email], :readonly=>true %>
        </div>

        <div>
          <label>Password</label>
    	    <%= f.password_field :password, autocomplete: "off" ,:placeholder=>"**************", required: true%>
        </div>
    	
        <div>
          <label>Password Confirmation</label>
    	    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=>"**************", required: true%>
        </div>
      </div>
      <%= hidden_field_tag "inviter_id",nil ,:value=>params[:inviter_id] %>
      <div class="clear"></div>
      <div class="clear"></div>
  	  <div class="bottom">
        <div class="remember">
          <%= f.submit "Sign up",:class=>"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="clear"></div>
    <div class="clear"></div>
  </div>  
</div> 
<style type="text/css">
.form_wrapper form{
  display:block;
  background:#fff;
  margin-bottom: 0;
}
.form_wrapper{
  position: relative;
}
.form_wrapper input[type="text"],
.form_wrapper input[type="password"],
.form_wrapper input[type="email"]
{
  padding:10px 9px;
  height: auto !important;
}

.form_wrapper .bottom{
  overflow-y:auto;
  padding-bottom: 20px;
  margin-top: 20px;
}
.navbar-inner{
  background: #B87333;
}
.container {
width: 100%;
}
body {
background-color: #DFDFD5;
}
</style>