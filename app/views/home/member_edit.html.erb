                  <div class="col-4">
                  	<label for="user_photo">Photo</label>
                  </div>
                  <div style=" margin-bottom: 15px; " class="col-8">
                    <%= file_field_tag :photo %>
                  </div>
                </div>

                <div class="client-form-row">
                  <div class="col-4">
                    <label for="user_phone">Phone Number</label>
                  </div>
                  <div class="col-8">
