<script>
$(document).ready(function(){
  $(window).on('click', '#permission_company_admin', function(){
  if($(this).prop('checked')){
    $('#detailed_permissions').html('<%= j render partial: "admin_permission_added" %>');
  }else{
    $('#detailed_permissions').html('<%= j render partial: "admin_permission_removed" %>');
  }
})
  teamAdd()
  checkCustomBox()
})
