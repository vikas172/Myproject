              <div class="compressed_form form_section">
                <h3 class="title2-font">
                  <i class="fa fa-gear"></i>
                  Member Info
                </h3>

                <div class="client-form-row">
                  <div class="col-4">
                    <label for="user_name">Full Name*</label>
                  </div>
                  <div class="col-8">
                    <%= text_field_tag :full_name,nil,:value=>@team_member.full_name, autofocus: true ,:class=>"large wide"%>
                  </div>
                </div>

                <div class="client-form-row">
                  <div class="col-4">
                    <label for="user_email">E-mail*</label>
                  </div>
                  <div class="col-8">
                   <%= email_field_tag :email,nil,:value=>@team_member.email ,autofocus: true ,:class=>"large wide",:style=>"width: 54%;"%>
                  </div>
                </div>

                <div class="client-form-row">
                  <div class="col-4">
                    <label for="user_email">Mobile Number*</label>
                  </div>
                  <div class="col-8">
          
                    <%= text_field_tag :mobile_number,nil,:value=>@team_member.mobile_number,:placeholder=> "Mobile Number...",:class=>"mobile_number_team_member",:maxlength=>"12"%>
                  </div>
                </div>
                <div class="client-form-row" id="change-password-link">
                  <div class="col-4"></div> 
                  <div class="col-8">
                    <div class="inner button" style="cursor: pointer; margin-left: 51%;"><i class="fa fa-unlock"></i>change password</div>
                  </div>
                </div>
                <div class="pwd"></div>  
                <span class="requires_login_access" id="login_credentials"></span>
