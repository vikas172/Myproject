      <div class="span2">
        <%= f.label :image %> 
      </div>
      <div class="span7">
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :location %> 
      </div>
      <div class="span7">
        <%= f.text_field :location %>
      </div>
    </div>

    <div >
      <%=render "items/custom_new"%>
    </div>
    
    <div class="clearfix"></div>
    <div class="actions">
      <%= link_to 'Back', items_path,:class=>"model_cancel_button",:style=>"margin: -1px 23px -1px -1px;" %>
      <%= f.submit "Create Inventory",:class=>"button_new_create save-new-btn1 pull-right"%>
    </div>
  </div>  
<% end %>
