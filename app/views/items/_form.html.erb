      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="span12 new-form-design">
    <div class="row">
      <div class="span2">
        <%= f.label :name %>
      </div>
      <div class="span7">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :description %> 
      </div>
      <div class="span7">
        <%= f.text_area :description %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :product_model_number %>
      </div>
      <div class="span7">
        <%= f.text_area :product_model_number %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :vendor_part_number %> 
      </div>
      <div class="span7">
        <%= f.text_field :vendor_part_number %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :vendor_name %> 
      </div>
      <div class="span7">
        <%= f.text_field :vendor_name %>
      </div>
    </div>


      <div class="row">
      <div class="span2">
        <%= f.label :quantity %> 
      </div>
      <div class="span7">
        <%= f.text_field :quantity %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :unit_value %> 
      </div>
      <div class="span7">
        <%= f.text_field :unit_value %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :value %> 
      </div>
      <div class="span7">
        <%= f.text_field :value %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :vendor_url %> 
      </div>
      <div class="span7">
        <%= f.text_field :vendor_url %>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <%= f.label :category %> 
      </div>
      <div class="span7">
