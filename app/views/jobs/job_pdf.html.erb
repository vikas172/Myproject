<div class="work_area" id="work_order">
  <div class="work_order_header top clearfix">
    <div style="width:100%">
      <div style="width:50%; float:right;">
        <ul class="right">
        <li>
          <span class="label">Work Order</span>
          <span>#<%=@job.id%></span>
        </li>

        <li>
          <b><span class="label">From</span>&nbsp;&nbsp;&nbsp;&nbsp;
          <span><%=@client.company_name%></span></b>
        </li>

        <li>
          <p><span class="label">Bill To</span> &nbsp;&nbsp;&nbsp;&nbsp;
          <%= @job.property.try(:street) %><br> <%= @job.property.try(:street2) %><br> <%= @job.property.try(:city) %>,  <%= @job.property.try(:state) %>  <%@job.property.try(:zipcode) %>
          <br>
          </p>
        </li>

        <li >
          <span class="label" style="margin-right:30%">Schedule</span>
          <span><%=@job.visits%></span>
        </li>
      </ul>
    </div>  

    <div style="float:left; width:50%">
      
      <h3><%=@client.company_name%></h3>
      <h3 style="margin-top:4%;"><%= @client.initial %>&nbsp;<%= @client.first_name.titleize %>&nbsp;<%= @client.last_name.titleize%></h3>
      <p>
        &nbsp;&nbsp;<%= @job.property.try(:street) %><br> &nbsp;&nbsp;<%= @job.property.try(:street2) %><br> &nbsp;&nbsp;<%= @job.property.try(:city) %>,  <%= @job.property.try(:state) %>  <%@job.property.try(:zipcode) %>
        <br>
      </p>
      <p><% if !@client.phones.first.blank?%>
        <%= @client.phones.first.phone_number.first %><br><%end%>
       <%if !@client.emails.first.blank?%> <%=@client.emails.first.email.first%><%end%>
      </p>
    </div>
  </div> 
</div> 
  <%if @job_works.blank?%>
    <div id="line_items">
      <div id="line_items_head">
       <span class="Service short"> Service/Product</span>
        <span class="description_job_pdf short">Description</span>
        <span class="centered_job_pdf hours_column">Qty.</span>
      </div>
      <%10.times.each do |a|%>
        <hr>
        <br>
      <%end%>

    </div>
  <%else%>
    <div style="margin-top:30px; margin-bottom:30px;">
      <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <th style="background-color:#333;color:#fff; padding:5px; border-right:1px solid #DDDDDD;">Service / Product</th>
          <th style="background-color:#333;color:#fff; padding:5px; border-right:1px solid #DDDDDD;">Description</th>
          <th style="background-color:#333;color:#fff; padding:5px; border-right:1px solid #DDDDDD;">Qty</th>
        </tr>
        <%@job_works.each do |work|%>
        <tr>
          <td style="color:#000; padding:5px; border-right:1px solid #DDDDDD; border-bottom:1px solid #DDDDDD;"><%= work.name%></td>
          <td style="color:#000; padding:5px; border-right:1px solid #DDDDDD; border-bottom:1px solid #DDDDDD;"><%= work.description rescue ""%></td>
          <td style="color:#000; padding:5px; border-right:1px solid #DDDDDD; border-bottom:1px solid #DDDDDD;"><%= work.quantity%></td>
        </tr>
        <%end%>
      </table>
    </div>
  <%end%>  
  <div style="width:100%">
    <div style="margin-top:20%; width:60%; float:left;">
       We can be called for touch-ups and small changes for the next 3 days. After that
      all work is final.
    </div>
    <div style="float:right; width:20% margin-top:20%">
      Client Signature
      <br><br><br><br>
        ___________________
            Date

    </div>
  </div>  


</div> 
<style>
.description_job_pdf{
  margin-left: 20%!important;
}
.centered_job_pdf{
  margin-left: 30%!important;
}
div.work_area div#line_items {
    clear: both;
    padding: 0;
}div.work_area div#line_items div#line_items_head {
    background: none repeat scroll 0 0 #555555;
    padding: 4px 15px;
}div.work_area div#totals {
    float: right;
    margin: 0 15px 20px 0;
    text-align: right;
}
div.work_area div#totals div {
    clear: right;
    float: right;
    margin: 3px 0;
}
div.work_area div#line_items .right_items {
    float: right;
}
   .clearfix:after {
    clear: both;
    content: ".";
    display: block;
    height: 0;
    visibility: hidden;
}

div#work_order div.work_order_header {
    margin-bottom: 10px;
}
.show div.work_area div.top {
    
    padding-top: 15px;
}div#work_order div.work_order_header ul.right {
    display: table;
    float: right;
}div#work_order div.work_order_header ul.right li {
    display: table-row;
}div#work_order div.work_order_header ul.right li > span.label, div#work_order div.work_order_header ul.right li > span.description {
    color: #555555;
    padding-right: 10px;
    text-align: right;
}

div#work_order div.work_order_header ul.right li > span {
    display: table-cell;
    font-size: 13px;
    line-height: 20px;
    max-width: 210px;
    text-align: left;
}div.work_area div.top .left {
    clear: left;
}div#work_order div.work_order_header div.left h3 {
    margin-top: 0;
    padding-top: 0;
}
</style>