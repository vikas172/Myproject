<%if !@service_plans.blank? %>
<h1 class="title1-font"> Service Plan Lists</h1>
	<table class="table"> 
		<thead>
			<tr>
				<th>S.No</th>
				<th>Service Name</th>
				<th>Description</th>
				<th>Unit Cost</th>
				<th colspan="2">Action</th>
			</tr>
	  <thead>	
	  <tbody>
			<%@service_plans.each_with_index do |plan,index|%>
				<tr>
					<td><%= index+1 %></td>
					<td><%= plan.name%></td>
					<td><%= plan.description%></td>
					<td><%= plan.unit_cost%></td>
					<td><%= link_to "Edit",service_plan_edit_pool_service_path(plan)%></td>
					<td><%= link_to "Delete",service_plan_delete_pool_service_path(plan), :data => {:confirm => 'Are you sure?'}%></td>
				</tr>
			<%end%>
		</tbody>
	</table>	
<%end%>

