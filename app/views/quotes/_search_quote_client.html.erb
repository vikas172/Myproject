<%if !@clients.blank?%>
<% @clients.reverse.each do |client| %> 
    <li>
    <div class="popover_user">
      <i class="fa fa-user fa-2"></i>
    </div>
  <div class="user_contain_search">
    <%if client.properties.count!=1%>
      <a href="/quotes/new?client_id=<%= client.id%>&quote_create=quote" class="row ">
    <%else%>
      <a href="/quotes/new?property_id=<%= client.properties.first.id%>" class="row ">
    <%end%>
    <h3 class="client_name individual">
      <%= client_name_display(client) rescue "" %>
    </h3>
        <span style="display:inline-block; width:120px;"><%= client.properties.count rescue "" %> Pool</span>
    <span><%= client.phone_number rescue "" %></span>
    <span class="last_active" style="float: right;">
      Activity &nbsp;<%= time_ago_in_words(client.created_at, include_seconds: true) rescue "" %>&nbsp; ago
    </span>

  </a>
</div>
</li>
<% end %>
<%else%>
no record found
<% end %>