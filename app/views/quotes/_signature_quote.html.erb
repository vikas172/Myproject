<div class="modal fade" id="signature_model_quote" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header new-modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Signature Pad</h4>
        </div>
        <div class="modal-body">   
          <%= form_tag({:action => :quote_client_sign},:class=>"sigPad") do %>
            <%= hidden_field_tag "quote_id" , @quote.id %>
            <div class="sig sigWrapper">
              <div class="typed"></div>
              <canvas class="pad" width="450" height="115"></canvas>
              <input type="hidden" name="output" class="output">
            </div>
            <li class="clearButton btn"><a href="#clear">Clear</a></li>
            <%= submit_tag "Submit",:class=>"btn"%>
          <%end%>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>
