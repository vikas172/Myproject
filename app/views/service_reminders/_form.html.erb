                </ul>
              </div>
            <% end %>
              <div class="field ">
                <div class="col-md-3">
                  <%= f.label :vehicle_name %></div>
                <div class="col-md-6 no-padding">
                  <%= f.text_field :vehicle_name %>
                </div>
              </div>
            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :service_task %></div>
                  <div class="col-md-6 no-padding">
                    <%#= f.text_field :service_task %>
