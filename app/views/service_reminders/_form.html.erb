                  </div>
                </div>
            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :meter_interval %></div>
                <div class="col-md-6 no-padding">
                  <%= f.text_field :meter_interval %>
                </div>
            </div>
                        <div class="field ">
                <div class="col-md-3">
                  <%= f.label :meter_threshold %></div>
                <div class="col-md-6 no-padding">
                  <%= f.text_field :meter_threshold %>
                </div>
            </div>
            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :time_interval %></div>
                <div class="col-md-6 no-padding">
                  <%= f.text_field :time_interval %>
                </div>
            </div>
            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :time_duration %></div>
                <div class="col-md-6 no-padding">
                  <%#= f.text_field :time_duration %>
                  <%= f.select :time_duration, options_for_select([["day(s)","day(s)"],["week(s)","week(s)"],["month(s)","month(s)"]])%>
                </div>
            </div>
            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :time_threshold %></div>
                <div class="col-md-6 no-padding">
                  <%= f.text_field :time_threshold %>
                </div>
            </div>
            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :threshold_duration %></div>
                <div class="col-md-6 no-padding">
                  <%#= f.text_field :threshold_duration %>
                  <%= f.select :threshold_duration, options_for_select([["day(s)","day(s)"],["week(s)","week(s)"],["month(s)","month(s)"]])%>
                </div>
            </div>

            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :subscribed_user %></div>
                <div class="col-md-6 no-padding">
                  <%#= f.text_field :subscribed_user %>
                    <select id="subscribre_user" multiple="multiple" data-size="5" name="service_reminder[subscribed_user][]">
                      <%if  @user_list.present? %>
                        <%@user_list.each do |user|%>
                          <option value="<%=user.member_id%>">
                            <%=user.email%>
                          </option>
                        <%end%>
                      <%end%>
                    </select>
                </div>
            </div>


            <div class="field ">
                <div class="col-md-3">
                  <%= f.label :email_notification %></div>
                <div class="col-md-6 no-padding">
                  <%= f.check_box :email_notification %>
                </div>
            </div>
            <div class="actions">
              <% if params[:action] == "edit" %>
                <%= link_to "Delete Service Reminder", service_reminder_path(@service_reminder), method: "delete", class: "button remove delete_expense pull-left" %>
              <% end %>
              <%= f.submit "SAVE", class: "model_save_button pull-right save-new-btn1"%>
              <button type="button" class="model_cancel_button" data-dismiss="modal">CANCEL</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

