    margin-top: -4px;
  }
  .filter-grid-de input[type="text"]{
    width: 69%
  }
  .filter-sand input[type="text"]{
    width: 26.4%;
  }
  .equip-pump-brand input[type="text"]{
    width: 31.8%
  }
