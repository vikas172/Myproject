    width: 88%;
    left: 27%;
  }
  #property-spa-data  h6{
    width: auto;
    float: left;
    font-weight: bold !important;
    margin: 0px;
    font-size: 14px;
    margin-top: 2px;
    margin-right: 8px;
  }
