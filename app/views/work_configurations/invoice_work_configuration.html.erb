<div id="app_wrapper">
  <div class="client_index">
    <div class="main_container">
      <div>
        <%=render "home/work_item_side_bar" %>
        <div id="settings_area"> 
          <h4 class="title1-font">Invoice Overview</h4>              
          <%= form_tag  work_configuration_edit_default_invoice_set_path ,:class=>"edit_work_configuration compressed_form" do %>
            <div>
              <div class="config_description">
                The information specified here will be used by default for all Invoices generated by CopperService.
              </div>

              <p style="overflow-y:auto;">
                <label for="work_configuration_default_invoice_subject">Default invoice subject</label>
                <%if !@invoice_default.blank?%>
                  <%= text_field_tag "work_configuration[default_invoice][invoice_subject][]",nil,:value=>@invoice_default.invoice_default[:default_invoice]["invoice_subject"][0],:class=>"large"%>
                <%else%>
                  <%= text_field_tag "work_configuration[default_invoice][invoice_subject][]",nil,:value=>"For Services Rendered",:class=>"large"%>
                <%end%>
              </p>
              <p>
                <label for="work_configuration_default_invoice_net">Default invoice net</label> 
                <%if !@invoice_default.blank?%>
                  <%if @invoice_default.invoice_default[:default_invoice]["invoice_net"][0]!=""%>
                    <%=select_tag("work_configuration[default_invoice][invoice_net][]", options_for_select([["Upon receipt","0"],["Net 15","15"],["Net 30","30"],["Net 45","45"],["Other",""]],:selected=>@invoice_default.invoice_default[:default_invoice]["invoice_net"][0]),:onchange=>"setDefaultValue($(this).val())")%>
                    <span style="display: none; float: right; margin-right: 20%; width: 15%;" id="default_invoice_net_other" >
                    <%= text_field_tag "work_configuration[default_invoice][invoice_net][]",nil ,:value=>"",:style=>"width: 46%;"%>
                    days
                    </span>
                  <%else%>
                    <%=select_tag("work_configuration[default_invoice][invoice_net][]", options_for_select([["Upon receipt","0"],["Net 15","15"],["Net 30","30"],["Net 45","45"],["Other",""]],:selected=>@invoice_default.invoice_default[:default_invoice]["invoice_net"][0]),:onchange=>"setDefaultValue($(this).val())")%>
                    <span style="display: block; float: right; margin-right: 20%; width: 15%;" id="default_invoice_net_other" >
                    <%= text_field_tag "work_configuration[default_invoice][invoice_net][]",nil ,:value=>@invoice_default.invoice_default[:default_invoice]["invoice_net"][1],:style=>"width: 46%;" ,:class=>"set_other_value"%>
                    days
                    </span>
                  <%end%>
                <%else%>
                 <%=select_tag("work_configuration[default_invoice][invoice_net][]", options_for_select([["Upon receipt","0"],["Net 15","15"],["Net 30","30"],["Net 45","45"],["Other",""]]),:onchange=>"setDefaultValue($(this).val())")%>
                  <span style="display: none; float: right; margin-right: 20%; width: 15%;" id="default_invoice_net_other" >
                    <%= text_field_tag "work_configuration[default_invoice][invoice_net][]",nil ,:value=>"",:style=>"width: 46%;"%>
                    days
                  </span>
                <%end%>  
              </p>
              <br>
              <p class="branding_holder">
                <label>Client Copy</label>
                <%= link_to "Open PDF Template Designer", "#", onclick: "checkMarked(this.id,'invoices'); $('#open_pdf_modal').modal('show'); return false;", style: "cursor: pointer;" %>
                <%=render "pdf_style" %>
              </p>
              <hr style="border-color:#ccc;">
              <h4 class="title2-font">Reminders</h4>
              <p class="description">CopperService can remind you to invoice your customer for <a target="_blank" href="https://learn.getcopperservice.com/hc/en-us/articles/200648855#creating_jobs">recurring contracts</a>. You can specify which users should be assigned to the <span class="event reminder">task</span>.</p>
              <div class="">
                <!-- <label style="margin-right: 0">Assigned to:</label>
                <input type="hidden" value="" name="work_configuration[default_invoice_reminder_assigned_to_ids][]" id="work_configuration_default_invoice_reminder_assigned_to_ids_">
                  <br/>
                  <p class="checkbox_holder clearfix">  
                    <input type="checkbox" value="" name="work_configuration[default_invoice_reminder_assigned_to_ids][]" id="" style="float:left;margin-right: 10px;">
                    <label for="work_configuration_default_invoice_reminder_assigned_to_ids" style="text-align: left;"><%#= current_user.full_name%></label>
                  </p> -->
                  <!-- <%#if !@team_member.blank?%>
                    <%#@team_member.each do |team_member|%>
                      <p class="checkbox_holder clearfix" >
                        <input type="checkbox" value="" name="work_configuration[default_invoice_reminder_assigned_to_ids][]" id="" style="float:left;margin-right: 10px;">
                        <label for="work_configuration_default_invoice_reminder_assigned_to_ids" style="text-align: left;"><%#= team_member.full_name%></label>
                      </p>
                    <%#end%>  
                  <%#end%>   -->
              </div>
            </div>

          <div id="">
           <!--  <div class="checkbox_holder">
              <input type="checkbox" value="1" name="work_configuration[update_invoice_reminders]" id="work_configuration_update_invoice_reminders">
              <label for="work_configuration_update_invoice_reminders" style= "float: none; display: inline;">Reassign all incomplete invoice reminders</label>
            </div>
 -->
            <%if @invoice_default.present? && @invoice_default.remainder==true%>
              <div class="checkbox_holder">
                <%=check_box_tag :remainder,:value, true%> Customer Remainder
              </div>
            <%else%>
              <div class="checkbox_holder">
                <%=check_box_tag :remainder %> Customer Remainder
              </div>
            <%end%>
            <% if @invoice_default.present? && @invoice_default.days.present? %>
              <div>
                <label>Days</label>
                <%= text_field_tag :days, @invoice_default.days %>
              </div>
            <% else %>
              <div>
                <label>Days</label>
                <%= text_field_tag :days %>
              </div>
            <% end %>
            <div>
              <label>Template</label>
              <%= text_field_tag :template,nil,:value=>"For Invoice Remainder" %>
            </div>
            <input type="submit" value="Update Settings" name="commit" data-disable-with="Updating..." class="update_button_setting save-new-btn1" style="margin-top: 10%; margin-left: 605px;">
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
<style type="text/css">

.checkbox_holder > input {
    clear: both;
    float: left;
    margin: 4px 15px !important;
}
.checkbox_holder{
padding-left:133px !important;
}
</style>